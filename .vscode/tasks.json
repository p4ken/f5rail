{
  "version": "2.0.0",
  "type": "shell",
  "problemMatcher": [],
  "presentation": {
    "reveal": "always",
    "panel": "shared",
    "echo": true,
    "showReuseMessage": false,
  },
  "tasks": [
    {
      "label": "release",
      "detail": "リリース用の実行ファイルをビルドする",
      "dependsOn": [
        "bin/*.bat",
        "bin/*.exe"
      ],
      "dependsOrder": "sequence",
      "command": "wsl echo Successfully built binaries for release.",
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "bin/*.bat",
      "command": "wsl iconv -f utf8 -t sjis -o bin/SIN.bat bin-utf8/SIN.bat"
    },
    {
      "label": "bin/*.exe",
      "dependsOn": "target/release/*.exe",
      "command": "wsl cp -p target/release/*.exe bin/"
    },
    {
      "label": "target/release/*.exe",
      "command": "cargo build --release",
    },
  ]
}