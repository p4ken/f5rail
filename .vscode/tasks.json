{
  "version": "2.0.0",
  "type": "shell",
  "problemMatcher": [],
  "presentation": {
    "reveal": "always",
    "panel": "shared",
    "echo": true,
    "showReuseMessage": false,
  },
  "tasks": [
    {
      "label": "release",
      "detail": "外部変形をビルドする",
      "dependsOn": [
        "target/release/f5rail.exe",
        "target/debug/package.exe",
      ],
      "command": "cargo run --bin package",
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "target/release/f5rail.exe",
      "command": "cargo build --release --bin f5rail",
    },
    {
      "label": "target/debug/package.exe",
      "command": "cargo build --bin package",
    },
  ]
}
