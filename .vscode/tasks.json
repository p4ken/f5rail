{
  "version": "2.0.0",
  "type": "shell",
  "problemMatcher": [],
  "presentation": {
    "reveal": "always",
    "panel": "shared",
    "echo": true,
    "showReuseMessage": false,
  },
  "tasks": [
    {
      "label": "release",
      "detail": "リリース用の実行ファイルをビルドする",
      "dependsOn": [
        "bin/*.exe",
        "bin/*.bat",
      ],
      "dependsOrder": "sequence",
      "command": "echo 'Successfully built binaries for release.'",
      "presentation": {
        "echo": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "bin/*.bat",
      "command": "iconv -f utf8 -t sjis -o bin/SIN.bat bin-utf8/SIN.bat",
      "windows": {
        "command": "wsl iconv -f utf8 -t sjis -o bin/SIN.bat bin-utf8/SIN.bat"
      },
    },
    {
      "label": "bin/*.exe",
      "dependsOn": "target/release/*.exe",
      "command": "cp -p target/release/*.exe bin/",
      "windows": {
        "command": "copy target\\release\\*.exe bin\\",
      }
    },
    {
      "label": "target/release/*.exe",
      "windows": {
        "command": "cargo build --release",
      }
    },
  ]
}
